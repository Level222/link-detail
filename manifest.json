{
  "manifest_version": 3,
  "name": "Link Visualize",
  "version": "1.0.0",
  "description": "This is a Chrome extension to visualize link details",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "append-iframe.js"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "link-listener.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}